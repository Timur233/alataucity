<section id="gallery" class="gallery pb-6">
    <div class="container">
        <h2 class="section-title section-title--green mt-0 mt-md-5">
            <span class="section-title__aplet">{{ gallery_title }}</span>
        </h2>
        <div class="gallery__items d-none d-md-flex">
            {% for item in gallery_items %}
                <div class="gallery__item">
                    <a 
                        href="https://cms.abpx.kz{{ item.children.path }}" 
                        class="gallery__link" 
                        style="background-image: url('https://cms.abpx.kz{{ gallery_items[0].path }}')"
                        data-gallery-images="{% for img in item.children[1].settings.gallery %}https://cms.abpx.kz{{ img.path}}{% if loop.last == false  %},{% endif%}{% endfor %}"  
                        onclick="frontend.lightBox(this.getAttribute('data-gallery-images')); return false"
                    >
                        <img 
                            src="https://cms.abpx.kz{{ item.children[0].settings.image.path }}" 
                            alt="{{ item.children[0].settings.text }}"
                        >
                        <h5 class="gallery__title">
                            {{ item.children[2].settings.text|raw }}
                        </h5>
                        <h6 class="gallery__span">
                            {{ item.children[3].settings.text }}
                        </h6>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>